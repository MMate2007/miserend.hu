<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews
    </IfModule>

    RewriteEngine On

    # Redirect Trailing Slashes...
    RewriteRule ^(.*)/$ /$1 [L,R=301]

    RewriteBase /
    RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    RewriteRule ^(.*)$ http://%1/$1 [R=301,L]

    # Handle Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    

    RewriteRule ^map(/|)$ index.php?m_id=26&m_op=map&$1 [NC,QSA]

	RewriteRule ^api/v([0-9]{1,4})/miserend.sqlite3(/|)$ /fajlok/sqlite/miserend_v$1.sqlite3 [NC]
	RewriteRule ^api/v([0-9]{1,4})/miserend.sqlite3/([0-9]{4}-[0-9]{2}-[0-9]{2})(/|)$ api.php?q=sqlite&v=$1&datum=$2 [NC]

    RewriteRule ^api/v([0-9]{1,4})/templomok(/|)$ api.php?q=table&table=templomok&v=$1 [NC,QSA]

    RewriteRule ^api/v([0-9]{1,4})/report(/|)$ api.php?q=report&v=$1 [NC,QSA]

	RewriteRule ^api/v([0-9]{1,4})/updated(/|)$ api.php?q=updated&v=$1 [NC]
	RewriteRule ^api/v([0-9]{1,4})/updated/([0-9]{4}-[0-9]{2}-[0-9]{2})(/|)$ api.php?q=updated&v=$1&datum=$2 [NC]

    RewriteRule ^api/v([0-9]{1,4})/login(/|)$ api.php?q=login&v=$1 [NC,QSA]
    RewriteRule ^api/v([0-9]{1,4})/user(/|)$ api.php?q=user&v=$1 [NC,QSA]
    RewriteRule ^api/v([0-9]{1,4})/user/favorites(/|)$ api.php?q=favorites&v=$1 [NC,QSA]

</IfModule>