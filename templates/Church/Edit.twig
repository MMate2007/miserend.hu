{% import "forms.twig" as forms %}

{% extends "layout.twig" %}

{% import "forms.twig" as forms %}

{% block content %}
    <FORM ENCTYPE='multipart/form-data' method=post>
        <input type=hidden name=tid value={{ churh.id }}>
        <table cellpadding=4>            
            <tr>
                <td colspan=2>
                    <span class=kiscim>Nyilvános oldal megnyitása:</span><span class=alap> (új ablakban) </span> 
                    <a href='/templom/{{ church.id }}' class=link target=_blank>{{ church.nev }}</a>
                </td>
            </tr>
            {{ remark|raw }}
            <tr>
                <td bgcolor=#ECE5C8>
                    <div class=kiscim align=right>Megjegyzés:</div>
                </td>
                <td bgcolor=#ECE5C8>
                    <textarea name=adminmegj class=urlap cols=50 rows=2>{{ church.adminmegj }}</textarea>
                    {% include 'help_link.twig' with {'id': 1} %}                    
                </td>
            </tr>
            <tr>
                <td bgcolor=#efefef>
                    <div class=kiscim align=right>Felelős:</div>
                </td>
                <td bgcolor=#efefef>
                    <textarea name=kontakt class=urlap cols=50 rows=2>{{ church.kontakt }}</textarea>
                    <span class=alap> név és telefonszám</span>
                    {% include 'help_link.twig' with {'id': 2} %}<br/>
                    <input type=text name=kontaktmail size=40 class=urlap value='{{ church.kontaktmail }}'>
                    <span class=alap> emailcím</span>
                </td>
            </tr>
            <tr>
                <td bgcolor=#efefef>
                    <div class=kiscim align=right>Feltöltő (jogosult):</div>
                </td>
                <td bgcolor=#efefef>
                    {{ felelos|raw }}
                </td>
            </tr>
            <tr>
                <td bgcolor=#F5CC4C>
                    <div class=kiscim align=right>Templom neve:</div>
                </td>
                <td bgcolor=#F5CC4C>
                    <input type=text name=nev value="{{ church.nev }}" class=urlap size=80 maxlength=150>&nbsp;
                    {% include 'help_link.twig' with {'id': 3} %}
                </td>
            </tr>
            <tr>
                <td bgcolor=#FAE19C>
                    <div class=kiscim align=right>Közismert neve:</div>
                </td>
                <td bgcolor=#FAE19C>
                    <input type=text name=ismertnev value="{{ church.ismertnev }}" class=urlap size=80 maxlength=150>&nbsp;
                    {% include 'help_link.twig' with {'id': 4} %}                    
                </td>
            </tr>
            {{ content|raw }}
            <tr>
                <td bgcolor=#efefef>
                    <div class=kiscim align=right>Plébánia adatai:<br>
                        {% include 'help_link.twig' with {'id': 6} %}                     
                    </div>
                </td>
                <td bgcolor=#efefef>
                    <textarea name=plebania class=urlap cols=50 rows=3>{{ church.religious_administration.parish.description }}</textarea><br/>
                    <span class=alap> cím, telefon, fax, kontakt</span><br/>
                    <input type=text name=pleb_eml value='{{ church.religious_administration.parish.email }}' size=40 class=urlap maxlength=100><span class=alap> email</span><br/>
                    <input type=text name=pleb_url value='{{ church.religious_administration.parish.url }}' size=40 class=urlap maxlength=100><span class=alap> web http://-rel együtt!!!</span>
                </td>
            </tr>
            <tr>
                <td bgcolor=#ffffff>
                    <div class=kiscim align=right>Megjegyzés:<br/>
                        {% include 'help_link.twig' with {'id': 10} %}                     
                    </div>
                </td>
                <td bgcolor=#ffffff>
                    <textarea name=megjegyzes class=urlap cols=50 rows=3>{{ church.megjegyzes }}</textarea>                
                </td>
            </tr>
            <tr>
                <td bgcolor=#ffffff>
                    <div class=kiscim align=right>Aktív misézőhely:</div>
                </td>
                <td bgcolor=#ffffff>
                    <input type=radio name=miseaktiv class=urlap value=1 {% if church.miseaktiv == 1 %}checked{% endif %}>
                    &nbsp;<span class=alap>Van rendszeresen mise.</span>
                    <input type=radio name=miseaktiv class=urlap value=0 {% if church.miseaktiv != 1 %}checked{% endif %}>
                    &nbsp;<span class=alap>Nincs rendszeresen mise.</span>
                </td>
            </tr>
            <tr>
                <td bgcolor=#ffffff>
                    <div class=kiscim align=right>Mise megjegyzés:<br/>
                        {% include 'help_link.twig' with {'id': 41} %} 
                    </div>
                </td>
                <td bgcolor=#ffffff>
                    <textarea name=misemegj class=urlap cols=50 rows=3>{{ church.misemegj|nl2br }}</textarea>
                </td>
            </tr>
            <tr>
                <td valign=top>
                    <div class=kiscim align=right>Részletes leírás, templom története:<br>
                        {% include 'help_link.twig' with {'id': 9} %}                    
                    </div>
                </td>
                <td valign=top>                
                    <textarea name=szoveg class=urlap cols=90 rows=10>{{ church.leiras|nl2br }}</textarea>
                </td>
            </tr>
            <tr><td>KÉPEK</td><td>KÉPEK</td></tr>
            <tr>
                <td valign=top>
                    <div class=kiscim align=right>Frissítés:</div>
                </td>
                <td valign=top>
                    <input type=checkbox name=frissit value=i class=urlap>
                    <span class=alap> Frissítsük a dátumot</span>
                    {% include 'help_link.twig' with {'id': 14} %}
                </td>
            </tr>
            <tr>
                <td bgcolor=#efefef valign=top>
                    <div class=kiscim align=right>Megjelenhet:</div>
                </td>
                <td bgcolor=#efefef valign=top>
                    {{ forms.select(form.ok) }}
                    {% include 'help_link.twig' with {'id': 15} %}
                </td>
            </tr>
            <tr>
                <td valign=top>
                    <div class=kiscim align=right>Történet:</div>
                </td>
                <td valign=top>
                    <textarea cols=50 rows=6 disabled>{{ log }}</textarea>
                </td>
            </tr>
            <tr>
                <td>
                    <div align=right><input type=submit name='submit' value=Mehet class=urlap>&nbsp;</div>
                </td>
                <td>
                    <input type=radio name=modosit value=i class=urlap checked><span class=alap> és újra módosít</span><br/>
                    <input type=radio name=modosit value=m class=urlap><span class=alap> és tovább a miserendre</span><br/>
                    <input type=radio name=modosit value=n class=urlap><span class=alap> és vissza a listába</span><br/>
                    <input type=radio name=modosit value=t class=urlap><span class=alap> és vissza a templom oldalára</span>
                </td>
            </tr>
        </table>
    </form>
    <script language="javascript" type="text/javascript" src="/js/tiny_mce/tiny_mce.js"></script>
    <script language="javascript" type="text/javascript" src="/js/tiny_mce_init.js"></script>
{% endblock %}
