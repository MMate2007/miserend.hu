<div class="panel-group" id="accordion" data-controller="chat">
    <div class="panel panel-default">
		<input class="form-control" data-chat-target="message" />
		<div><a id="chat_submit" class="form-control btn btn-primary" data-action="click->chat#sendButtonDidClick">Elküldés</a></div>
		<div id='chat_users' class='panel-body kicsi'>
			chat.rendered_users|raw
		</div>
		<div id='chat_comments' class="panel-body" data-last="{{ chat.last_comment_at }}" data-unread="0" style="max-height:400px;width:100%;overflow:auto;margin-top:4px;">
			for comment in chat.comments
		    	include "chat/chatcomment.twig"
			endfor
		<div id="chat_loadnext" class="loadnext text-center"><span class="link kicsi">[Továbbiak betöltése]</span></div>
		</div>
	</div>
</div>
