<script>
$(document).ready(function(){
  $('.clickme.close').html(function(){
      var $this= $(this);
      $('#'+ $this.data('id')).slideToggle();    
      return '+';
   });

  //use event delegation
  $(document).on('click','.clickme',function(){
    var $this= $(this);
    $('#'+ $this.data('id')).slideToggle('slow',function(){
      if($this.html() == '+') $this.html('-');
      else $this.html('+');     
   });
  });
});
</script>

